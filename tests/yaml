#!/bin/bash

IAM="${0##*/}"

if [ ! -d tests/outputs ]; then
	mkdir tests/outputs
fi

>| tests/outputs/$IAM

echo "one file test" >> tests/outputs/$IAM
outlier --yaml $top_srcdir/tests/inputs/simple.dat >> tests/outputs/$IAM

echo "two files test" >> tests/outputs/$IAM
outlier --yaml $top_srcdir/tests/inputs/simple.dat $top_srcdir/tests/inputs/simple.dat >> tests/outputs/$IAM

echo "stdin test" >> tests/outputs/$IAM
cat $top_srcdir/tests/inputs/simple.dat | outlier --yaml >> tests/outputs/$IAM

sed -i "s|$top_srcdir/tests/inputs/||g" tests/outputs/$IAM
diff -u $top_srcdir/tests/expected/$IAM tests/outputs/$IAM
exit $?
